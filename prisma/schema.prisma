generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  password  String

  colors    Color[]
  radius    Radius[]
  spacing   Spacing[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Color {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  label     String  @unique
  color     String
  
  userId    String  @map("user_id") @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Radius {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  label     String  @unique
  value     Float
  
  userId    String  @map("user_id") @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Spacing {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  label     String  @unique
  value     Float
  
  userId    String  @map("user_id") @db.ObjectId
  user      User    @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}